    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/header_footer.css">
    <link rel="stylesheet" href="/css/userProfile.css">
    <title><%=user.name%></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/30a937ae38.js" crossorigin="anonymous"></script>
</head>
<body>
    <%-include('./partials/header')%>
    <main>
      <div class="card mb-3 card" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/img/users/<%=user.avatar%>" class="img-fluid rounded-start" alt="user-avatar">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=user.name%></h5>
              <p class="card-text">Telefono: <%= user.phone_number %></p>
              <p class="card-text">rol: <%= user.userCategory.name %></p>
              <p class="card-text">Creado: <%= user.createdAt.toLocaleDateString('en-GB', { timeZone: 'UTC' }) %></p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              <a href="/user/edit/<%=user.id%>" class="btn btn-outline-warning">Editar</a>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%-include('./partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>