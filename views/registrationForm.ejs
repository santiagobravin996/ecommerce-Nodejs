<%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/registrationForm.css">
    <link rel="stylesheet" href="/css/header_footer.css">
    <script src="/scripts/registFormValidations.js"></script>
    <title>Formulario de registro</title>


    </head>

    <body>
        <%-include('./partials/header')%> 

        <section>
            <div class="camposObligatorios">

                <h4>Formulario de registro</h4>
                <div>
                    <!-- TODO: complatr validation errors -->


                    <form action="registration-form" method="POST" enctype="multipart/form-data" id="regist-form">

                        <div class="field">
                            <label class="label" for="nombre">Nombre Completo</label>
                            <input class="campos <%=(locals.errors && errors.name)?'invalid':''%>" type="text"
                                name="name" placeholder="..." id="name"
                                value="<%=(locals.oldData && oldData.name)?oldData.name:''%>">

                            <div class="name-errors">
                                <% if(locals.errors && errors.name){%>
                                    <p class="error">
                                        <%=errors.name.msg%>
                                    </p>
                                <%}%>
                            </div>

                        </div>

                        <div class="field">
                            <label class="label" for="avatar">Avatar</label>
                            <input class="campos <%=(locals.errors && errors.avatar)?'invalid':''%>" type="file"
                                placeholder="... " id="avatar" name="avatar"
                                value="<%=(locals.oldData && oldData.avatar)?oldData.avatar:''%>">
                            <p class="allowed-formats">JPG,JPEG,PNG,GIF</p>
                            <div class="avatar-errors">
                                <% if(locals.errors && errors.avatar){%>
                                    <p class="error">
                                        <%=errors.avatar.msg%>
                                    </p>
                                    <%}%>
                            </div>

                        </div>

                        <div class="field">
                            <label class="label" for="email">Email</label>
                            <input class="campos <%=(locals.errors && errors.email)?'invalid':''%>" type="text"
                                placeholder="... " id="email" name="email"
                                value="<%=(locals.oldData && oldData.email)?oldData.email:''%>">
                            <div class="email-errors">
                                <% if(locals.errors && errors.email){%>
                                    <p class="error">
                                        <%=errors.email.msg%>
                                    </p>
                                    <%}%>
                            </div>

                        </div>

                        <div class="field">
                            <label class="label" for="telefono">Telefono</label>
                            <input class="campos <%=(locals.errors && errors.number)?'invalid':''%>" type="text"
                                placeholder="..." id="phone" name="number"
                                value="<%=(locals.oldData && oldData.number)?oldData.number:''%>">
                            <div class="phone-errors">
                                <% if(locals.errors && errors.number){%>
                                    <p class="error">
                                        <%=errors.number.msg%>
                                    </p>
                                    <%}%>
                            </div>

                        </div>


                        <div class="field">
                            <label class="label" for="contrase単a">Contrase単a</label>
                            <input class="campos <%=(locals.errors && errors.password)?'invalid':''%>" type="password"
                                placeholder="..." id="password" name="password">
                            <div class="password-errors">
                                <% if(locals.errors && errors.password){%>
                                    <p class="error">
                                        <%=errors.password.msg%>
                                    </p>
                                    <%}%>

                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="confirmar-contrase単a">Confirmar contrase単a</label>
                            <input class="campos <%=(locals.errors && errors.confirmPassword)?'invalid':''%>"
                                type="password" placeholder="..." id="repassword" name="confirmPassword">
                            <div class="repassword-errors">
                                <% if(locals.errors && errors.confirmPassword){%>
                                    <p class="error">
                                        <%=errors.confirmPassword.msg%>
                                    </p>
                                    <%}%>

                            </div>
                        </div>

                        <div class="button-container">
                            <button type="submit" id= "createBtn"value="">Crear cuenta</button>
                        </div>
                    </form>
                </div>



            </div>
        </section>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

        <%-include('./partials/footer')%>
    </body>

    </html>