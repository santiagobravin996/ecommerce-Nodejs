    <%- include('./partials/head') %>   
    <link rel="stylesheet" href="/css/header_footer.css"> 
    <!-- <link rel="stylesheet" href="/css/teaProductStyle.css"> -->
    <link rel="stylesheet" href="/css/carruselStyle.css">
    <link rel="stylesheet" href="/css/indexStyle.css">
    
    <title>Yerbas - DigiCommerce</title>
</head>

<body>
    <%-include('./partials/header')%>
    <main>
        <%-include('./partials/carrusel')%>


        <section class="contenedor-productos">

            <h2 class="pDestacados">Destacados</h2>

            <section class="contenedor contenedor-p1">
                
                <%featuredSelectedProducts.forEach(product => { %>
                        <div class="articulo">
                            <a href="/product/product-detail/<%=product.id%>" class="main-article">
                                <img src="/img/products/<%=product.images[0].file_name%>" alt="<%=product.name%>" class="product">
                                <p class="product"><%=product.name%></p>
                                <p class="price">
                                    <%if(!product.discount){%>
                                        <b>$<%=product.price%></b>
                                    <%}else{%>
                                        <b>$<%=product.price-product.price*(product.discount*0.01)%></b>
                                    <%}%>    
                                </p>
                             </a>
                                <div class="button-container">
                                    <% if (locals.userLogged && userLogged.users_categories_id==2 || !locals.userLogged) { %>
                                        <button class="botonBuy adding-button" data-prodId="<%= product.id %>" data-userId="<%= locals.userLogged && userLogged.id %>"><i class="fa-solid fa-cart-shopping"></i></button>
                                    <% }else{ %>
                                        <a href="/product/edit-product/<%=product.id%>"><button class="botonBuy">Editar</button></a>
                                    <% } %>
                                </div>
                        </div>
                <% }) %>
                

            </section>

            <h2 class="pOfertas">Ofertas</h2>

            <section class="contenedor contenedor-p2">

                <% discountSelectedProducts.forEach(product => { %>
                        <div class="articulo">
                            <div class="discount-container">
                                <p class="discount">%<%=product.discount%></p>
                                <p>OFF</p>
                            </div>
                            <a href="/product/product-detail/<%=product.id%>" class="main-article">
                                <img src="/img/products/<%=product.images[0].file_name%>" alt="<%=product.name%>" class="product">
                                <p class="product"><%=product.name%></p>
                                <p class="price">
                                    <span>$<%=product.price%></span> / <b>$<%=product.price-product.price*(product.discount*0.01)%></b>
                                </p>
                             </a>
                             <div class="button-container">
                                <% if (locals.userLogged && userLogged.users_categories_id==2 || !locals.userLogged) { %>
                                    <button class="botonBuy adding-button" data-prodId="<%= product.id %>" data-userId="<%= locals.userLogged && userLogged.id %>"><i class="fa-solid fa-cart-shopping"></i></button>
                                <% }else{ %>
                                    <a href="/product/edit-product/<%=product.id%>"><button class="botonBuy">Editar</button></a>
                                <% } %>
                            </div>
                        </div>
                <%})%>
                    

            </section>

            <h2 class="pOfertas">Todos los productos</h2>
            <section class="contenedor contenedor-todos">

                <% selectedProducts.forEach(product => { %>

                    <div class="articulo">
                        <a href="/product/product-detail/<%=product.id%>" class="main-article">
                            <img src="/img/products/<%=product.images[0].file_name%>" alt="<%=product.name%>" class="product">
                            <p class="product"><%=product.name%></p>
                            <p class="price">
                                <%if(!product.discount){%>
                                    <b>$<%=product.price%></b>
                                <%}else{%>
                                    <b>$<%=product.price-product.price*(product.discount*0.01)%></b>
                                <%}%>    
                            </p>
                         </a>
                         <div class="button-container">
                            <% if (locals.userLogged && userLogged.users_categories_id==2 || !locals.userLogged) { %>
                                <button class="botonBuy adding-button" data-prodId="<%= product.id %>" data-userId="<%= locals.userLogged && userLogged.id %>"><i class="fa-solid fa-cart-shopping"></i></button>
                            <% }else{ %>
                                <a href="/product/edit-product/<%=product.id%>"><button class="botonBuy">Editar</button></a>
                            <% } %>
                        </div>
                    </div>
                <%})%>
                    

            </section>

        </section>

        

    </main>


    <%-include('./partials/footer')%>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>